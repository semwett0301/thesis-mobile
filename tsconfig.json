{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "jsx": "react-native",
    "skipLibCheck": true,
    "paths": {
      "shared": [
        "./shared"
      ],
      "pages": [
        "./pages"
      ],
      "features": [
        "./features"
      ],
      "widgets": [
        "./widgets"
      ],
      "entities": [
        "./entities"
      ]
    }
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
  ]
}
